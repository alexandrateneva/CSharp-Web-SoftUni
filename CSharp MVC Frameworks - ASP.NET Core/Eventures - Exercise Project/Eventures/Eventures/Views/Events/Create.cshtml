<h1 class="text-center">Create Event</h1>
<hr class="w-50 hr-blue hr-2" />
<form class="mx-auto half-width" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="name" class="label-center">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Iron Maiden - Hills of Rock" name="name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="place" class="label-center">Place</label>
                <input type="text" class="form-control" id="place" placeholder="Plovdiv, Bulgaria" name="place">
            </div>
        </div>
    </div>
    <hr class="hr-blue hr-2" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="start" class="label-center">Start</label>
                <input type="datetime" class="form-control" id="start" placeholder="20-Jul-2018 22:00" name="start">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="end" class="label-center">End</label>
                <input type="datetime" class="form-control" id="end" placeholder="20-Aug-2018 04:00" name="end">
            </div>
        </div>
    </div>
    <hr class="hr-blue hr-2" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="totalTickets" class="label-center">Total Tickets</label>
                <input type="number" class="form-control" id="totalTickets" placeholder="1000" name="totalTickets">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="pricePerTicket" class="label-center">Price Per Ticket</label>
                <input type="number" step="0.01" class="form-control" id="pricePerTicket" placeholder="150.00" name="pricePerTicket">
            </div>
        </div>
    </div>
    <hr class="hr-blue hr-2" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Create Event</button>
    </div>
</form>