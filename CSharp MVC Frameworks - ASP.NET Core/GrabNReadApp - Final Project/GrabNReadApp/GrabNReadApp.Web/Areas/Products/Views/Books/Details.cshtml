@model GrabNReadApp.Web.Areas.Products.Models.Books.BookDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-around">
    <div class="col-md-5">
        <img src="@Model.CoverImage" style="width: 17rem;" />
    </div>
    <div class="col-md-5">
        <h2 class="text-center">
            @Model.Title
        </h2>
        <h3 class="text-center">
            by  @Model.Author
        </h3>
        <table class="table table-hover table-sm">
            <tbody>
                <tr>
                    <td>Release Date</td>
                    <td>@Model.ReleaseDate.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <td>Pages</td>
                    <td>@Model.Pages</td>
                </tr>
                <tr>
                    <td>Price (Buy)</td>
                    <td>@Model.Price BGN</td>
                </tr>
                <tr>
                    <td>Price per Day (Rent)</td>
                    <td>@Model.PricePerDay BGN</td>
                </tr>
                <tr>
                    <td>Cover Type</td>
                    <td>@Model.CoverType</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.Description</td>
                </tr>
            </tbody>
        </table>
        <div class="row justify-content-around">
            <a class="btn btn-primary" asp-area="" asp-controller="" asp-action="" asp-route-id="@Model.Id">Byu</a>
            <a class="btn btn-primary" asp-area="" asp-controller="" asp-action="" asp-route-id="@Model.Id">Rent</a>
        </div>
    </div>
</div>

