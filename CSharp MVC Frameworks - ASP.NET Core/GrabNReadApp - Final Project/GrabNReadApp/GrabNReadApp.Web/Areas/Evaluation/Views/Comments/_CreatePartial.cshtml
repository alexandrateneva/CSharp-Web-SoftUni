@model GrabNReadApp.Web.Areas.Evaluation.Models.Comments.CommentViewModel

<h4 class="text-center mt-4">What is your opinion about the book?</h4>
<div class="row justify-content-center mb-4">
    <div class="col-md-10">
        <form class="form-inline" asp-area="Evaluation" asp-controller="Comments" asp-action="Create" method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="BookId" hidden />
            <div class="form-group">
                <div class="col-1">
                    <label asp-for="Content" class="control-label mr-1"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Content" class="form-control" size="80"/>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-1">
                <input type="submit" value="Add Comment" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>
