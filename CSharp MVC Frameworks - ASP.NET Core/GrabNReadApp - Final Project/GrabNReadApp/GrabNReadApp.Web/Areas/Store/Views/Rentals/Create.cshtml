@model GrabNReadApp.Web.Areas.Store.Models.Rentals.RentalViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <img src="@Model.Book.CoverImage" style="width: 20rem;" />
    </div>
    <div class="col-md-6 text-center">
        <h1>Rent</h1>
        <hr />
        <h1>@Model.Book.Title</h1>
        <h3>by  @Model.Book.Author</h3>
        <form asp-action="Create" method="Post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span id="dateValidation" class="text-danger"></span>
            <input asp-for="BookId" class="form-control" hidden="" />
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input id="startDate" type="date" asp-for="StartDate" class="dateRent form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input id="endDate" type="date" asp-for="EndDate" class="dateRent form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <h5>Total Sum: </h5>
                <p class="text-danger" id="totalSum">@Model.Book.PricePerDay</p>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/Scripts/Store/CreateRental.js"></script>
    <script type="text/javascript">
        dateValidation(@Model.Book.PricePerDay);
    </script>
}
