@model GrabNReadApp.Web.Areas.Store.Models.Purchases.PurchaseViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <img src="@Model.Book.CoverImage" style="width: 17rem;" />
    </div>
    <div class="col-md-4 text-center">
        <h1>Order</h1>
        <hr />
        <h1>@Model.Book.Title</h1>
        <h3>by  @Model.Book.Author</h3>
        <form asp-action="Create" method="Post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="BookId" class="form-control" hidden="" />
            <div class="form-group">
                <label asp-for="BookCount" class="control-label"></label>
                <input type="number" id="bookCount" max="20" asp-for="BookCount" class="form-control" onkeydown="return false" />
                <span asp-validation-for="BookCount" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <h5>Total Sum: </h5>
                <p class="text-danger" id="totalSum">@Model.Book.Price</p>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#bookCount").change(function () {
                var bookCount = $("#bookCount").val();
                var totalSum = @Model.Book.Price * bookCount;
                $("#totalSum").text(totalSum.toFixed(2) + ' BGN');
            });
        });
    </script>
}