@using Microsoft.AspNetCore.Identity
@using PandaWebApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link nav-link-white active" href="/receipts/index">Receipts</a>
    </li>
    <li class="nav-item">
        <form method="post" asp-controller="Account" asp-action="Logout">
            <input class="nav-link nav-link-white active bg-panda border-panda" style="cursor: pointer;" type="submit" value="Logout" />
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link nav-link-white active" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link nav-link-white active" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
}