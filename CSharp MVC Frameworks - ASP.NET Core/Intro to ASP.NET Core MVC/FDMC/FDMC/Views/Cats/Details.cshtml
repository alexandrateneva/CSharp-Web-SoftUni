@model FDMC.ViewModels.Cats.CatDetailsViewModel;

<div class="container">
    <div class="row d-flex justify-content-center">
        <h1>Details</h1>
    </div>
    <hr/>
    <div class="row d-flex justify-content-around">
        <div class="col-md-6 text-center">
            <img src="@Model.ImageUrl" class="rounded details-pic" alt="Cat picture">
        </div>
        <div class="col-md-6 text-center mt-5">
            <h1>@Model.Name</h1>
            <hr/>
            <h3>Age: @Model.Age</h3>
            <h3>Breed: @Model.Breed</h3>
        </div>
    </div>
</div>