@model FDMC.ViewModels.Cats.CatCreateViewModel;

<div class="mb-5">
    <h1 class="text-center">Create Cat</h1>
    <hr class="bg-fdmc w-50 hr-2" />
    <form class="mx-auto w-50" method="post" action="/cats/create">
        <div class="form-group">
            <label for="name">Name</label>
            <div>
                @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            </div>
            <input type="text" class="form-control" id="description" placeholder="Name..." name="name">
        </div>
        <div class="form-group">
            <label for="breed">Breed</label>
            <div>
                @Html.ValidationMessageFor(m => m.Breed, null, new { @class = "text-danger" })
            </div>
            <input type="text" class="form-control" id="breed" placeholder="Breed..." name="breed">
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <div>
                @Html.ValidationMessageFor(m => m.Age, null, new { @class = "text-danger" })
            </div>
            <input type="number" class="form-control" id="age" placeholder="Age..." name="age" value="0">
        </div>
        <div class="form-group">
            <label for="imageUrl">Image URL</label>
            <div>
                @Html.ValidationMessageFor(m => m.ImageUrl, null, new { @class = "text-danger" })
            </div>
            <input type="text" class="form-control" id="imageUrl" placeholder="Image URL..." name="imageUrl">
        </div>
        <hr />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn btn-dark text-white">Create</button>
        </div>
    </form>
</div>